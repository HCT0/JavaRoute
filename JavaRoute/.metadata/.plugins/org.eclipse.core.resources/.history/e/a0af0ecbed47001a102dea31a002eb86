package File;
import java.io.*;
public class FileInputStreamPractice2 {
	/*
	 * 拆分文件和组装文件
	 * 拆：将几百k的文件分为100k一个
	 * 组合：将拆的组合起来为一个文件
	 * 关闭流，在try会自动进行关闭
	 * 也可以在finally进行关闭
	 * 
	 * */
	public static void main(String[] args) throws IOException {
		File f = new File("F:\\代码文件\\代码库\\java  路线\\j2ee\\src\\File\\filebackup.chm");
		String str1 = "filebackup-";
		String str2 =".chm";
		

		try(FileInputStream fis = new FileInputStream(f);){
			byte[] str3 = new byte[(int)f.length()];
			byte[] str4 = new byte[1024000];
			fis.read(str3);
			int i=0;
			if(f.length()>102400) {	
				while(i < f.length()){
					str4[i % 102400 ]=str3[i];
					if(i % 102400 == 0 ) {
						String str5 = str1+i/102400+str2;//组装文件名字
						@SuppressWarnings("resource")
						FileOutputStream fos = new FileOutputStream(str5);
						fos.write(str4);
						fos.close();	
					}
			}
		}
		}
		
	}
}